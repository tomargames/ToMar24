<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tomar.tomar24"
    android:versionCode="4"
    android:versionName="1.12" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.tomar.tomar24.MainActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    	<!-- A child of the main activity -->
    	<activity
        	android:name="org.tomar.tomar24.HowToPlay"
        	android:label="@string/action_how_display"
        	android:parentActivityName="org.tomar.tomar24.MainActivity" >
        	<!-- Parent activity meta-data to support 4.0 and lower -->
        	<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="org.tomar.tomar24.MainActivity" />
    	</activity>
    	<!-- A child of the main activity -->
    	<activity
        	android:name="org.tomar.tomar24.AboutToMarGames"
        	android:label="@string/action_about"
        	android:parentActivityName="org.tomar.tomar24.MainActivity" >
        	<!-- Parent activity meta-data to support 4.0 and lower -->
        	<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="org.tomar.tomar24.MainActivity" />
    	</activity>
    	</application>

</manifest>
